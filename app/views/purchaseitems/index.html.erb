<div class="left"> 
<h2><a href="#">VIEW PURCHASES</a></h2>
<hr />
<br/>
<form action="form_action.asp" method="get">
<table width="500" border="0">
  <tr>
    <td>Invoice Number:</td>
    <td><input type="text" name="invoice_number" /></td>
    <td>Category:</td>
    <td><input type="text" name="category" /></td>
  </tr>
  <tr>
    <td>Branch:</td>
    <td><input type="text" name="branch" /></td>
    <td>Sub Category:</td>
    <td><input type="text" name="subcategory" /></td>
  </tr>
  <tr>
    <td>From:</td>
    <td><input type="text" name="from" /></td>
    <td>Item:</td>
    <td><input type="text" name="item" /></td>
  </tr>
  <tr>
    <td>To:</td>
    <td><input type="text" name="to" /></td>
    <td>Supplier:</td>
    <td><input type="text" name="supplier" /></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><input type="submit" value=" Search " /></td>
  </tr>
</table>
</form>
<br/><br/>

<% form_tag purchaseitems_path, :method => 'get' do %>
	<p>
		From:<%= text_field_tag :from, params[:from] %>
		To:<%= text_field_tag :to, params[:to] %>
		<%= submit_tag "Search", :name => nil %>
		
	</p>
<% end %>

</div>

<div class="right"></div>
<div style="clear: both;"></div>
<table border="1">
  <tr>
    <th>Purchase date</th>
    <th>Invoice</th>
    <th>Supplier</th>
    <th>Branch</th>
    <th>Inventory</th>
    <th>Purchase unitcost</th>
    <th>Purchase quantity</th>
    <th>Purchase amount</th>
    <th>Vat type</th>
    <th>Vat amount</th>
    <th>Net amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @purchaseitems.each do |purchaseitem| %>
  <tr>
    <td><%= purchaseitem.purchase_date %></td>
    <td><%= purchaseitem.invoice_id %></td>
    <td><%= purchaseitem.supplier_id %></td>
    <td><%= purchaseitem.branch_id %></td>
    <td><%= purchaseitem.inventory_id %></td>
    <td><%= purchaseitem.purchase_unitcost %></td>
    <td><%= purchaseitem.purchase_quantity %></td>
    <td><%= purchaseitem.purchase_amount %></td>
    <td><%= purchaseitem.vat_type %></td>
    <td><%= purchaseitem.vat_amount %></td>
    <td><%= purchaseitem.net_amount %></td>
    <td><%= link_to 'Show', purchaseitem %></td>
    <td><%= link_to 'Edit', edit_purchaseitem_path(purchaseitem) %></td>
    <td><%= link_to 'Destroy', purchaseitem, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Purchaseitem', new_purchaseitem_path %>
